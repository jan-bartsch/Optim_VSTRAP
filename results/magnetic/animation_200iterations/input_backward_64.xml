<simulation>
	 <global_values> 
 		 <time_step value="1e-6"/> 
 	 </global_values> 
	 <abort_criterium> 
 		 <max_itterations value="40" /> 
 	 </abort_criterium>
	 <executables> 
 	 	 <executable name="mesh_initializer" mode="CPU"> 
 			 <mesh name="vol_mesh">
				 <load>../../../Optim_VSTRAP/data/global/box_vol_regular_small.xml</load> 
 			 </mesh> 
 		 </executable>
		 <executable name="particle_initializer" mode="CPU"> 
 			<group name="adjoint_particles" empty="true"/>
 		 </executable>
		 <executable name="adjoint_particle_creator" mode="CPU"> 
 						 <geometry x_min="-0.05 " x_max="0.05 " y_min="-0.05 " y_max="0.05 " z_min="-0.05 " z_max="0.05 "/> 
			 <particle_group name="adjoint_particles" type="ions" number_density="1e+16" weight="5e+9" charge_number="+1" mass="6.63e-26" species="40Ar" /> 
			 <load>./creation_adjoint_particles_new.xml</load> 
 		 </executable> 
		 <executable name="pwi" mode="CPU"> 
 			<boundary_type name="cuboid"/>
			 <geometry x_min="-0.05 " x_max="0.05 " y_min="-0.05 " y_max="0.05 " z_min="-0.05 " z_max="0.05 "/> 
 			 <particle_group name="adjoint_particles"/> 
 		 </executable> 
		 <executable name="bgf" mode="CPU"> 
 			<volume_mesh name="vol_mesh"/>
			 <load>./interpolated_control_field_64.xml</load>
  			 <particle_batch> 
 				 <field name="interpolated_control_field"/> 
 				 <particle_group name="adjoint_particles"/> 
 			 </particle_batch>
 		 </executable>
		 <executable name="pusher" mode="CPU" type="adjoint">
			 <particle_group name="adjoint_particles"/> 
 		 </executable> 
		<executable name="mcc" mode="CPU"> 
 			 <particle_group name="adjoint_particles"/> 
 			 <interaction name="ela"> 
 			 </interaction> 
 			<background> 
 				 <species name="40Ar" mass="6.6335209e-26" mole_fraction="1.0"> 
				 <number_density fixed="true" value="1e+16"/> 
 				 <temperature fixed="true" x="200" y="200" z="200"/> 
 				 </species> 
 			 </background> 
			 <load>../../../Optim_VSTRAP/data/global/interaction_data_mcc.xml</load> 
 		 </executable> 
		 <executable name="plasma_state" mode="CPU"> 
 			 <batch file_name="batch_1" format="csv" output_interval="1"> 
 			 <particle_group name="adjoint_particles"/> 
 			 </batch> 
			<file path = "./results/" name="plasma_state" format="csv" output_interval="1"/> 
 		 </executable>
	 </executables>
	 <schedule> 
 		 <init> 
			 <executable name="mesh_initializer"/> 
			 <executable name="particle_initializer"/> 
			 <executable name="adjoint_particle_creator"/> 
			 <executable name="plasma_state"/> 
			 <executable name="pusher"/> 
			 <executable name="pwi"/> 
			 <executable name="mcc"/> 
			 <executable name="bgf"/> 
 		</init> 
		 <exec> 
			 <executable name="mcc"/> 
			 <executable name="adjoint_particle_creator"/> 
			 <executable name="bgf"/> 
			 <executable name="pusher"/> 
			 <executable name="pwi"/> 
			 <executable name="plasma_state"/> 
 		 </exec> 
	 </schedule>
</simulation>